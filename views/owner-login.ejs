<%- include('../partials/header') %>

<div class="w-full h-screen flex px-6 md:px-20">
    <div class="w-full md:w-1/2 lg:w-1/3 flex items-center justify-center h-screen">
        <div class="w-full md:px-12 lg:px-32">
            <h4 class="text-2xl capitalize mb-5">Admin Access</h4>
            <form autocomplete="off" action="/owners/login" method="post">
                <input class="block bg-zinc-100 w-full md:w-80 lg:w-96 px-3 py-2 md:py-3 border-[1px] rounded-md mb-3 border-zinc-200 text-lg" type="email" placeholder="Email" name="email">
                <input class="block bg-zinc-100 w-full md:w-80 lg:w-96 px-3 py-2 md:py-3 border-[1px] rounded-md mb-3 border-zinc-200 text-lg" type="password" placeholder="Password" name="password">
                
                <input class="px-5 block rounded-full py-3 mt-2 lg:w-96 bg-blue-500 text-white w-full cursor-pointer hover:bg-blue-800" type="submit" value="Login">
            </form>
        </div>
    </div>
</div>
