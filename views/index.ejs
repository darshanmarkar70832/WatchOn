<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>WatchOn</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <style>
        /* Additional styles can be added here */
        body {
            background-color: #EDE8F5; /* Fallback for non-Tailwind users */
        }
        .main-container {
            min-height: 100vh; /* Ensure container extends to at least viewport height */
        }
        /* Spinner styles */
        .spinner-wrapper {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(255, 255, 255, 0.9);
            z-index: 9999;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .spinner {
            border: 8px solid #f3f3f3;
            border-top: 8px solid #3498db;
            border-radius: 50%;
            width: 60px;
            height: 60px;
            animation: spin 1s linear infinite;
        }
        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
    </style>
</head>
<body class="bg-[#EDE8F5]">
    <!-- Loading Spinner -->
    <div class="spinner-wrapper" id="spinner-wrapper">
        <div class="spinner"></div>
    </div>

    <%- include('../partials/header') %>

    <% if(error && error.length > 0) { %>
        <div class="absolute top-14 left-1/2 -translate-x-1/2 p-3 rounded-md bg-red-500 md:top-20 lg:top-24 xl:top-28 2xl:top-32">
            <span class="inline-block mt-1 mb-1 text-white">
                <%= error %>
            </span>
        </div>
    <% } %>

    <div class="main-container flex flex-col md:flex-row px-4 md:px-20 items-center">
        <div class="w-full md:w-1/2 flex flex-col items-center justify-center md:h-screen pt-20 md:py-0">
            <div class="w-full md:px-32 px-4 welcome mb-10 md:mb-0">
                <h1 class="text-4xl text-center md:text-left mb-5">Welcome to <span class="text-blue-400 font-semibold">WatchOn</span></h1>
                <h4 class="text-2xl mb-5 text-center md:text-left">Create your account</h4>
                <form autocomplete="off" action="/users/register" method="post">
                    <input class="bg-zinc-100 block w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200" type="text" placeholder="Full Name" name="fullname">
                    <input class="bg-zinc-100 block w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200" type="email" placeholder="Email" name="email">
                    <input class="bg-zinc-100 block w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200" type="password" placeholder="Password" name="password">
                    <input class="px-5 rounded-full py-3 mt-2 bg-blue-500 text-white w-full cursor-pointer hover:bg-blue-800" type="submit" value="Create My Account">
                </form>
            </div>
        </div>
        <div class="w-full md:w-1/2 flex flex-col items-center justify-center md:h-screen md:py-0">
            <div class="w-full md:px-32 px-4 login mt-10 mb-10 md:mb-0">
                <h4 class="text-2xl capitalize mb-5 text-center md:text-left">Login to your account</h4>
                <form autocomplete="off" action="/users/login" method="post">
                    <input class="block bg-zinc-100 w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200" type="email" placeholder="Email" name="email">
                    <input class="block bg-zinc-100 w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200" type="password" placeholder="Password" name="password">
                    
                    <input class="px-5 block rounded-full py-3 mt-2 bg-blue-500 text-white w-full cursor-pointer hover:bg-blue-800" type="submit" value="Login">
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js" integrity="sha512-7eHRwcbYkK4d9g/6tD/mhkf++eoTHwpNM9woBxtPUBWm67zeAfFC+HrdoE2GanKeocly/VxeLvIqwvCdk7qScg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // GSAP animations
            gsap.from(".welcome", {
                x: -200,
                opacity: 0,
                delay: 0.2,
                duration: 1
            });
            gsap.from(".login", {
                x: 200,
                opacity: 0,
                delay: 0.2,
                duration: 1
            });

            // Hide the spinner after the page loads
            const spinnerWrapper = document.getElementById('spinner-wrapper');
            spinnerWrapper.style.display = 'none';
        });
    </script>
    <%- include('../partials/footer') %>
</body>
</html>
